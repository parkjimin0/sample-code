<div class="new-form">
  <p id="notice"><%= notice %></p>

  <h1 class="form-h1">
    <%= @beehive.name %>
  </h1>
  <div class="options">
    <table>
      <tr>
        <th class="name">Cell Types</th>
        <th class="name">Total</th>
        <th class="name">Percentage</th>
      </tr>

      <% CellType.all.each do |type| %>
      <tr>
        <td><%= type.name %></td>
        <td><%= @cumulative_cell_data[type.name]["count"] %></td>
        <td><%= @cumulative_cell_data[type.name]["percentage"] %></td>
      </tr>
      <% end %>

    </table>

    <div class="beehive-table-button">
        <table>
          <thead>
            <tr>
              <th class="name">My Current Cells</th>
              <th colspan="3" class="name">Options</th>
            </tr>
          </thead>

          <%= render "cells/cell" %>
        </table>
    </div>
  </div>

  <div class="cell-form">
    <h1 class="form-h1">Add a cell:</h1>
    <%= render "cells/form" %>
  </div>

  <div class="options">
    <%= link_to 'Edit Hive', edit_beehive_path(@beehive), class:"end-of-page-options" %> |
    <%= link_to 'Back', beehives_path, class:"end-of-page-options" %>
  <div>
</div>
